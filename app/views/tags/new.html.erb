<div class = "container">
  <div class = "row">
    <%= form_for(@tag, url:tags_path) do |f| %>
        <div class = "field">
          <div class="field_with_errors">
            <label>タイトル</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :title %><br>
          </div>
        </div>
        <div class = "field">
          <div class="field_with_errors">
            <label>内容</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_area :body %>
          </div>
        </div>
        <br><%= f.submit "タグを作る", class: "btn btn-primary col-xs-12" %></br>
    <% end %>
  </div>
</div>